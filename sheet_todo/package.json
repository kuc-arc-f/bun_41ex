{
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "bun run clean && bun run build:server && bun run build:js && bun run build:css",
    "build:server": "bunx esbuild --bundle --platform=node src/index.ts  --outfile=./dist/index.js",
    "build:js": "bunx esbuild --bundle src/entry-client.tsx --minify --outfile=./public/static/entry-client.js",
    "build:css": "bunx @tailwindcss/cli -i ./src/main.css -o ./public/static/main.css",
    "clean": "rimraf dist && rimraf public/static",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "axios": "^1.6.5",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "lucide-react": "^0.513.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.21.2",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "esbuild": "^0.25.8",
    "globals": "^16.1.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.8.3"
  }
}
