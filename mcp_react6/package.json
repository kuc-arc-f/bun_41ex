{
  "name": "mcp_react6",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "bun run build:server && bun run build:js && bun run build:css",
    "build:server": "bunx esbuild --bundle --platform=node src/index.ts  --outfile=./dist/index.js",
    "build:js": "bunx esbuild --bundle src/entry-client.tsx --minify --outfile=./public/static/entry-client.js",
    "build:css": "bunx @tailwindcss/cli -i ./src/main.css -o ./public/static/main.css",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "axios": "^1.6.5",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "marked": "^15.0.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.21.2",
    "tailwindcss": "^4.1.8",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.17",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "globals": "^16.1.0",
    "nodemon": "^3.1.0",
    "typescript": "~5.8.3"
  }
}
